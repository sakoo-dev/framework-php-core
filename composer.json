{
  "name": "sakoo/framework",
  "description": "The Sakoo PHP Web Framework",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "framework",
    "sakoo"
  ],
  "authors": [
    {
      "name": "Pouya Asgharnejad Tehran",
      "email": "pouyaaofficial@gmail.com",
      "role": "Senior Software Engineer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app",
      "System\\": "system"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sakoo\\Framework\\Core\\Tests\\": "core/tests"
    }
  },
  "minimum-stability": "dev",
  "require": {
    "sakoo/framework-core": "^1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.6",
    "phpstan/phpstan": "^2",
    "phpunit/phpunit": "^10",
    "php-mcp/server": "^2.0",
    "inspector-apm/neuron-ai": "^2.0",
    "swoole/ide-helper": "^6.0"
  },
  "scripts": {
    "lint": "./vendor/bin/php-cs-fixer check . --using-cache=no",
    "test": "./vendor/bin/phpunit --do-not-cache-result --coverage-text --colors=never",
    "analyse": "./vendor/bin/phpstan analyse --memory-limit 1G"
  },
  "repositories": [
    {
      "type": "path",
      "url": "core",
      "name": "sakoo/framework-core",
      "options": {
        "symlink": true
      }
    }
  ]
}
